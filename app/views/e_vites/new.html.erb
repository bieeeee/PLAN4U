<div class="container" data-controller="select-evite">
  <div class="d-flex">
    <div class="d-flex flex-column mb-3 ">
      <div data-action='click->select-evite#displayEvite'><%= image_tag "e_vite_1.png", id: "e_vite_1", class: "w-25 p-3"%></div>
      <div data-action='click->select-evite#displayEvite'><%= image_tag "e_vite_2.png", id: "e_vite_2", class: "w-25 p-3"%></div>
      <div data-action='click->select-evite#displayEvite'><%= image_tag "e_vite_3.png", id: "e_vite_3", class: "w-25 p-3"%></div>
    </div>
    <div class="">
      <div id="selected_evite_1"data-select-evite-target='evite'><%= render "evite_template_1"%></div>
      <div id="selected_evite_2"data-select-evite-target='evite'><%= render "evite_template_2"%></div>
      <div id="selected_evite_3"data-select-evite-target='evite'><%= render "evite_template_3"%></div>
    </div>
    <div class="">
      <%= form_with model: @e_vite, url: create_e_vite_path(@event), data: { behavior: "autosave" }, method: :post do |form| %>
        <%= form.text_field :template_id, class:'d-none', id:'input_choise'%>
        <%= form.submit value: 'Save'%>
      <% end %>
    </div>
  </div>
</div>
