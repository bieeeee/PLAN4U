
<%= simple_form_for event do |f| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <%= f.label :Name_of_your_partner, class: 'form-label' %>
  <div class="mb-3 d-flex">
    <%= f.input :partner_first_name, class: 'form-control', label: false, placeholder: "First Name" %>
    <%= f.input :partner_last_name, class: 'form-control', label: false, placeholder: "Last Name" %>
  </div>

  <div class="mb-3">
    <%= f.label :name_of_the_event, class: 'form-label' %>
    <%= f.input :name, class: 'form-control', label: false %>
  </div>

  <div class="mb-3 d-flex flex-column">
    <%= f.label :venue, class: 'form-label' %>
    <%= f.input :venue, class: 'form-control', label: false %>
    <%= f.label :date, class: 'form-label' %>
    <%= f.input :date, class: 'form-control', html5: true, label: false %>
  </div>

  <div class="actions">
    <%= f.submit 'Continue', class: 'btn btn-4u submit' %>
  </div>
<% end %>
