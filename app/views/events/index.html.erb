<div class="events-container mb-3 mt-5">
  <div class="upper-container d-flex h-100">
    <div class="photo-container d-flex flex-column align-self-center">
      <h1><%= current_user.first_name %> & <%= @event.partner_first_name %></h1>
      <h5><%= @event.date.strftime("%B %e, %Y") %></h5>
      <p>Only <%= (@event.date - Date.today).to_i %> days to go!</p>
    </div>
    <div class="checklist-container d-flex flex-column" data-controller="checkbox">
      <div class="d-flex flex-column">
        <div class="line d-flex flex-column">
        <div class="planning-title">PLANNING CHECKLIST</div>
          <div class="item">
            <input class="form-check-input" type="checkbox" value="" checked id="Create_your_event"> Create your event
          </div>
          <div class="item">
            <%= check_box_tag 'guest_list', current_user.guest_list, current_user.guest_list, data: {action: 'click->checkbox#changeValue'} %>
            <%= label_tag 'guest_list', 'Create your guest list' %>
          </div>
          <div class="item">
            <%= check_box_tag 'design_cards', current_user.design_cards, current_user.design_cards, data: {action: 'click->checkbox#changeValue'} %>
            <%= label_tag 'design_cards', 'Design your invitation card' %>
          </div>
          <div class="item">
            <%= check_box_tag 'send_cards', current_user.send_cards, current_user.send_cards, data: {action: 'click->checkbox#changeValue'} %>
            <%= label_tag 'send_cards', 'Send your invitation card' %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="rsvp-summary-container bg-white">
    <h3 class="rsvp-title">RSVP SUMMARY</h3>
    <div class="row row-cols-4 align-items-center text-center justify-content-between">
      <div class="d-flex flex-column align-items-center">
        <p class="number"><%= @yes %></p>
        <p class="text">Yes</p>
      </div>
      <div class="d-flex flex-column align-items-center">
        <p class="number"><%= @no %></p>
        <p class="text">No</p>
      </div>
      <div class="d-flex flex-column align-items-center">
        <p class="number"><%= @awaiting %></p>
        <p class="text">Awaiting</p>
      </div>
      <div class="d-flex flex-column align-items-center">
        <p class="number"><strong><%= @total %></strong></p>
        <p class="text"><strong>Total</strong></p>
      </div>
    </div>

    <div class="d-flex justify-content-center mt-3">
      <%= link_to "Add your guests", event_guests_path(current_user.events.first), class: "btn btn-4u" %>
    </div>
  </div>
</div>
