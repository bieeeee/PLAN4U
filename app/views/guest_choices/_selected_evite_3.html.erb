<div id="selected_evite_3" class="container d-flex h-100 align-items-center justify-content-center">
  <div class="align-self-center">
    <p class="text-center">You Are Invited<br>
      To Our Wedding</p>
    <p id="names" class="text-center"><%= @event.user.first_name %> <%= @event.user.last_name %><br>
      & <br>
      <%= @event.partner_name %></p>
    <p class="text-center"><%= @event.date.strftime("%B %e, %Y") %></p>
    <p class="text-center"><%= @event.venue %></p>
    <p class="text-center">Please RSVP by <%= (@event.date - 30).strftime("%B %e, %Y") %>
  </div>
</div>
