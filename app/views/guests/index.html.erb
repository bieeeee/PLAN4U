<table class='table'>
  <thead>
    <th>First name</th>
    <th>Last name</th>
    <th>Relationship</th>
    <th>Status</th>
    <th>Email</th>

    <th colspan=3>Actions</th>
  </thead>
  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.first_name %></td>
        <td><%= guest.last_name %></td>
        <td><%= guest.relationship %></td>
        <td><%= guest.status %></td>
        <td><%= guest.email %></td>

        <td><%= link_to "Edit", edit_guest_path(guest), "data-controller": "turbo" %></td>
        <td>
          <%= link_to "Delete", guest_path(guest),
            "data-turbo-method": :delete,
            "data-turbo-confirm": "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

